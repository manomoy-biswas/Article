<div class="page-wrapper">
  <div class="article-wrapper">
    <div class="card card-6">
      <div class="card-body">
        <div class="task-list">
          <div class="row">
            <div class="col-5 col-md-7 col-lg-8 text-left">
            </div>
            <div class="col-7 col-md-5 col-lg-4 text-right">
              
            </div>
          </div>
          <div>
          <% if @posts.present? %>
            <% @posts.each do |post|%>
              <div class="card article-card">
                <div class="row no-gutters">
                  <div class="col-12 col-md-5">
                    <%= image_tag post.image.url, class: "article-image"%>
                  </div>
                  <div class="col-12 col-md-7">
                    <%= link_to post_path(post.id), class: "article-link" do %>
                      <h3 class="article-title title-div"><%= post.post_name %></h3>
                    <% end %>
                    <p class= "article-description body-div more"><%= post.description %></p>
                  </div>
                  <div class="col-12">
                    <div class="action-row">
                      <div class="row">
                        <div class="col-2 text-center">
                          <% if current_user %>
                            <%= link_to like_post_path(post), method: :put, remote: :true do %>
                              <div>
                                <span><p><i class="like-btn
                                <% if current_user &.liked? post %>
                                  liked
                                <% end %>
                                fa fa-thumbs-up" id="like_<%=post.id %>"></i></p></span>
                              </div>
                            <% end %>
                          <% end %>
                        </div>
                        <% if current_user.admin || post.user_id == current_user.id %>
                          <div class="col-3 text-center">
                            <%= link_to "", edit_post_path(post), class: "fa fa-edit" %>
                          </div>
                          <div class="col-3 text-center">
                            <%= link_to "", post_path(post), method: :delete, class: "fa fa-trash"%>
                          </div>
                        <% end %>
                        <div class="col-4 text-right">
                          <span><span class="like-count" id="article_<%=post.id%>"><%= post.get_upvotes.size
                          %></span> Likes,</span>
                          <%= link_to post_path(post.id), class: "article-link" do %>
                            <span class="comment-count"><%= post.comments.count%> Comments</span>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div> 
                </div>
              </div>
            <% end %>
          <%else%>
            <div class="card-8">
              <div class="row ">
                <div class="col-12">
                  <p class="text-center">No Record Found</p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>