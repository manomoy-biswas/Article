<%= form_for :password, url: :change_passwords, autocomplete: "off" do |form| %>
  <div class="page-wrapper">
    <div class="wrapper login-wrapper">
      <div class="card">
        <div class="card-body">
          <h1 class="title text-center"> CHANGE PASSWORD</h1>
          <div class="form-group row">
            <%= form.label :old_password, for: "password", class:"col-sm-3 col-form-label" %>
            <div class="col-sm-9">
              <%= form.password_field :old_password, for: "password", class: "form-control", autocomplete: "new-password", placeholder: "Enter Old Password", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <%= form.label :new_password, for: "password", class:"col-sm-3 col-form-label" %>
            <div class="col-sm-9">
              <%= form.password_field :password, for: "password", class: "form-control", autocomplete: "new-password", placeholder: "Enter New Password", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <%= form.label :confirm_password, for: "password", class:"col-sm-3 col-form-label" %>
            <div class="col-sm-9">
              <%= form.password_field :confirm_password, for: "password", class: "form-control", autocomplete: "new
              +-password", placeholder: "Repeat New Password", required: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-12 text-center">
              <strong><%= form.submit "CHANGE", class:"btn btn-primary btn-lg" %></strong>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>