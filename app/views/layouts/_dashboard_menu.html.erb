<section class="dashboard-menu">
  <div class="dashboard-header">
    <h2 class="header-text text-center">DASHBOARD</h2>
  </div>
  <% if current_user %>
    <div class="create-btn-section">
      <%= link_to  "  Create", new_post_path, class:"fa fa-plus btn btn-primary btn-lg create-btn"%>
    </div>
  <% end %>
  <div class="row">
    <div class="col-12">
      <%= link_to overview_path, class: "dashboard-link" do%>
        <p class="dashboard-item menu-1">
          <i class="fa fa-pie-chart"></i>
          <span class="dashboard-item-text">Overview</span>
        </p>
      <% end %>
    </div>
    <% if current_user.admin %>
      <div class="col-12">
        <%= link_to users_path, class: "dashboard-link" do%>
          <p class="dashboard-item menu-2">
          <i class="fa fa-users"></i>
          <span class="dashboard-item-text">Users</span>
        </p>
        <% end %>
      </div>
      <div class="col-12">
        <%= link_to categories_path, class: "dashboard-link" do%>
          <p class="dashboard-item menu-3">
            <i class="fa fa-tag"></i>
            <span class="dashboard-item-text">Category</span>
          </p>
        <% end %>
      </div>
    <% end %>
    <div class="col-12">
      <%= link_to posts_path, class: "dashboard-link" do %>
        <p class="dashboard-item menu-4"> 
          <i class="fa fa-newspaper-o"></i>
          <span class="dashboard-item-text">Articles</span>
        </p>
      <% end %>
    </div>
    <div class="col-12">
      <%= link_to user_path(current_user.id), class: "dashboard-link" do %>
        <p class="dashboard-item menu-5">
          <i class="fa fa-user"></i>
          <span class="dashboard-item-text">Profile</span>
        </p>
      <% end %>
    </div>
    <div class="btm-0">
      <div class="change-password text-center">
        <%= link_to "Change password", new_change_password_path %>
      </div>
    </div>
  </div>
</section>
<section class="mobile-dashboard-menu">
  <div class="row">
    <div class="col-5">
      <a class="dropdown-toggle btn btn-primary btn-block"
        href="#" id="categoryDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        MENU
      </a>
      <div class="dropdown-menu dasshboard-list" aria-labelledby="categoryDropdown">
        <%= link_to overview_path, class: "dropdown-item dashboard-link" do%>
          <p class="dashboard-item">
            <i class="fa fa-pie-chart"></i>
            <span class="dashboard-item-text">Overview</span>
          </p>
        <% end %>
        <div class="dropdown-divider"></div>
        <% if current_user && current_user.admin %>
          <%= link_to users_path, class: "dropdown-item dashboard-link" do%>
            <p class="dashboard-item">
              <i class="fa fa-users"></i>
              <span class="dashboard-item-text">Users</span>
            </p>
          <% end %>
          <div class="dropdown-divider"></div>
          <%= link_to categories_path, class: "dropdown-item dashboard-link" do%>
            <p class="dashboard-item">
              <i class="fa fa-tag"></i>
              <span class="dashboard-item-text">Category</span>
            </p>
          <% end %>
          <div class="dropdown-divider"></div>
        <% end %>
        <%= link_to posts_path, class: "dropdown-item dashboard-link" do %>
          <p class="dashboard-item"> 
            <i class="fa fa-newspaper-o"></i>
            <span class="dashboard-item-text">Articles</span>
          </p>
        <% end %>
        <div class="dropdown-divider"></div>
        <%= link_to user_path(current_user), class: "dropdown-item" do %>
          <p class="dashboard-item">
            <i class="fa fa-user"></i>
            <span class="dashboard-item-text">Profile</span>
          </p>
        <% end %>
      </div>
    </div>
    <div class="col-2">
    </div>
    <div class="col-5 text-right">
      <% if current_user %>
        <div class="create-btn-section">
          <%= link_to  "  CREATE", new_post_path, class:"fa fa-plus btn btn-success btn-lg btn-block create-btn"%>
        </div>
      <% end %>
    </div>
  </div>
</section>
<section class="work-area">
  <div class="overview-wrapper">
    <div class="row bg-light overview-header">
      <div class="col-6 text-left">
        <h4 class="page-title"></h4> 
      </div>
      <div class="col-6 text-right">
        <h4 class="page-time"><i class="fa fa-calendar"></i> <span class="timer"></span></h4> 
      </div>
    </div>
    <%= yield %>
  </div>
</section>

